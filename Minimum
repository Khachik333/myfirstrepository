package arrays;

public class Minimum {
    public static void main(String [] args){
        int[] minArray = new int[]{3, 5, 1, 2, 7, 8, 6};
        System.out.println(findMinimum (minArray));
    }
    private static int[] findMinimum(int array[]) {
        int array[7];
        int min = аrray[0];
        for (int i = 0; i != аrray.length; i++) {
            if (аrray[i] < min) {
                min = аrray[i];
                return min;
            }
        }
    }
}